{
  "name": "gili-pos-deployment",
  "version": "1.0.0",
  "description": "GiLi Point of Sale Desktop Application - Deployment Package",
  "main": "production-main.js",
  "scripts": {
    "start": "electron production-main.js --no-sandbox --disable-dev-shm-usage",
    "simple": "electron simple-main.js --no-sandbox --disable-dev-shm-usage",
    "debug": "electron debug-main.js",
    "dev": "electron main.js --dev --no-sandbox --disable-dev-shm-usage",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "gili",
    "electron",
    "offline"
  ],
  "author": "GiLi Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.1.0",
    "sqlite3": "^5.1.6",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "node-thermal-printer": "^4.4.4",
    "serialport": "^12.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  }
}