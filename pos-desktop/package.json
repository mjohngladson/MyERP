{
  "name": "gili-pos",
  "version": "1.0.0",
  "description": "GiLi Point of Sale Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-dev-shm-usage",
    "dev": "electron . --dev --no-sandbox --disable-dev-shm-usage",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["pos", "point-of-sale", "gili", "electron", "offline"],
  "author": "GiLi Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "node-thermal-printer": "^4.4.4",
    "serialport": "^12.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "build": {
    "appId": "com.gili.pos",
    "productName": "GiLi PoS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}